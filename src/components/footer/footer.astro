---
import type { menuT } from '@/data/menus.ts';
import FooterColumn from './footer-column.astro';
import { footerMenus } from '@/data/menus.ts';


---

<footer class="bg-white dark:bg-gray-900">
  <div class="mx-auto w-full max-w-screen-xl">
    <div class="grid grid-cols-2 gap-8 px-4 py-6 lg:py-8 md:grid-cols-4">
        
        {footerMenus.map(menu => (
            <FooterColumn {menu}/>
        ))}
            
  </div>
  <div class="px-4 py-6 bg-gray-100 dark:bg-gray-700 md:flex md:items-center md:justify-between">
      <span class="text-xs sm:text-sm text-gray-500 dark:text-gray-300 sm:text-center">
        Arden Swim Club, 2126 The Highway, Wilmington, DE 19810
      </span>
      <div class="hidden sm:flex mt-4 sm:justify-center md:mt-0 space-x-5 rtl:space-x-reverse">
          <a href="https://www.facebook.com/ArdenSwimClub/" class="text-gray-400 hover:text-gray-900 dark:hover:text-white">
                <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 8 19">
                      <path fill-rule="evenodd" d="M6.135 3H8V0H6.135a4.147 4.147 0 0 0-4.142 4.142V6H0v3h2v9.938h3V9h2.021l.592-3H5V3.591A.6.6 0 0 1 5.592 3h.543Z" clip-rule="evenodd"/>
                  </svg>
                <span class="sr-only">Facebook page</span>
            </a>
            
      </div>
    </div>
  </div>
</footer>
